<form method="post" action="/notes">
	<div class="row pt-3 pd-1">
		<label for="note_title">タイトル：</label>
	</div>
	<div class="row form_group pt-2 pb-3">
		<input type="text" name="note_title" class="form-control col-md-5" id="note_title" required>
	</div>

  <div class="row pt-3 pd-1">
		<label for="note_body">内容：</label>
	</div>
	<div class="row form-group pt-1 pb-2">
		<textarea class="form-control col-md-5" name="note_body" rows="5" id="note_body" required></textarea>
	</div>
	
	<div class="row">
		<button type="submit" class="btn btn-primary mb-2">投稿する</button>
	</div>
</form>

